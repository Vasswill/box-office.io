                            <div class="input-group">
                                <input type="number" onchange="planW()" class="form-control-plaintext text-white pb-0 text-center" value="0" min="0" id="Width" name="Width">
                                <div class="input-gruop-append">
                                    <label class="mt-2 mb-0" for="Width">m.</label>
                                </div>
                            </div>
                        </div>
                    </div>

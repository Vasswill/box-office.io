                                    <h3 class="text-left head-text">Seat Class</h3>
                                </div>
                                <div class="btn-group mr-2" role="group" aria-label="Second group">
                                    <div class="btn text-white"><i class="material-icons" onclick="addSeat()">add_circle</i></div>
                                </div>
